{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <h1 class="mb-4">Trajets</h1>
        <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
        <form class="form-inline mb-4">
            <div class="form-group mr-2">
                <label for="searchTerm">Rechercher</label>
                <input type="text" class="form-control" id="searchTerm" name="q" value="{{ searchTerm }}">
            </div>
            </div>
        </form>

        <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
    <table class="table table-striped table-light table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Temps_parcours</th>
                <th>Pts_depart</th>
                <th>Pts_arrive</th>
                <th>Itineraire</th>
                <th>actions</th>
                <th>supression</th>
            </tr>
          
        </thead>
          
        <tbody>
        {% for trajet in trajets %}
            <tr>
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.tempsParcours }}</td>
                <td>{{ trajet.ptsDepart }}</td>
                <td>{{ trajet.ptsArrive }}</td>
                <td>{{ trajet.idIt.ptsdepart ~ ' => ' ~ trajet.idIt.ptsarrive }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('app_trajet_show', {'id': trajet.id}) }}">show</a>
                    <a class="btn btn-outline-info" href="{{ path('app_trajet_edit', {'id': trajet.id}) }}">edit</a>
                    


                </td>
                <td>{{ include('trajet/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    </div>
    <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
    

     </div>
      <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
    <a  class="btn btn-outline-info" href="{{ path('app_trajet_new') }}">Create new</a>
    <a href="{{ path('app_trajet_export') }}">Export to Excel</a>
    


    </div>
    <script>
        $(document).ready(function() {
            $('#searchTerm').on('input', function() {
                $(this).closest('form').submit();
            });
        });
    </script>
    
{% endblock %}
