{% extends 'base.html.twig' %}

{% block title %}Iteneraire index{% endblock %}

{% block body %}
<main id="main" class="main">
    <h1>Iteneraire index</h1>
    <div class="container">
        <h1 class="mb-4">Trajets</h1>
        <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
        <form class="form-inline mb-4">
            <div class="form-group mr-2">
                <label for="searchTerm">Rechercher</label>
                <input type="text" class="form-control" id="searchTerm" name="q" value="{{ searchTerm }}">
            </div>
            </div>
        </form>
    <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
    <table class=" table table-striped table-light table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pts_depart</th>
                <th>Pts_arrive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for iteneraire in iteneraires %}
            <tr>
                <td>{{ iteneraire.id }}</td>
                <td>{{ iteneraire.ptsDepart }}</td>
                <td>{{ iteneraire.ptsArrive }}</td>
                <td>
                    <a href="{{ path('app_iteneraire_show', {'id': iteneraire.id}) }}">show</a>
                    <a href="{{ path('app_iteneraire_edit', {'id': iteneraire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
     <div style="display: flex ;align-items: center;justify-content: center;margin-top:25px; margin-left:350px;margin-right:60px">
    <a href="{{ path('app_iteneraire_new') }}">Create new</a>
    </div>
     <script>
        $(document).ready(function() {
            $('#searchTerm').on('input', function() {
                $(this).closest('form').submit();
            });
        });
    </script>
    </main>
{% endblock %}
