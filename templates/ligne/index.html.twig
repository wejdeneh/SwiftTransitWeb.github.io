{% extends 'base.html.twig' %}

{% block title %}Ligne index{% endblock %}

{% block body %}
<style>

      .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.pagination a {
  display: inline-block;
  padding: 10px;
  margin-right: 10px;
  font-size: 14px;
  color: #fff;
  background-color: #337ab7;
  border-radius: 5px;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.pagination a:hover {
  background-color: #23527c;
}

.pagination .disabled a {
  opacity: 0.6;
  cursor: not-allowed;
}

.pagination .active a {
  background-color: #23527c;
}
</style>

    <div class="row" style="display: flex;align-items: center;justify-content: center;margin: 100px 300px 100px">
    <div class="col-lg-15">
    <div class="card">
    <div class="card-body">
{# <div  style="text-align: center;"> #}
    <h1>Ajout de Ligne de transport </h1>
      <a href="{{ path('app_ligne_new') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px"></i></a>
    <div class="table-responsive">
    <table class="table table-striped table-light table-bordered" id="t">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom ligne</th>
                <th>Type igne</th>
                <th>actions</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody id="myTable">
        {% for ligne in lignes %}
            <tr>
                <td>{{ ligne.id }}</td>
                <td>{{ ligne.nomLigne }}</td>
                <td>{{ ligne.typeLigne }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('app_ligne_show', {'id': ligne.id}) }}">show</a>
                    <a class="btn btn-outline-info" href="{{ path('app_ligne_edit', {'id': ligne.id}) }}">edit</a>
                    
                </td>
                <td>
                {{ include('ligne/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        <input type="text" value="" class="form-control" placeholder="Search for..." id="myInput">
    <button type="submit" class="btn btn-default btn-round btn-just-icon">
        </tbody>
    </table>
    </br>
    <div class="pagination">
    {{ knp_pagination_render(lignes) }}
    </div>

    <a class="btn btn-outline-info" href="{{ path('app_ligne_new') }}">Create new</a>
    </div>
    </div>
    </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                <script>
                    $(document).ready(function () {
                    $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    </div>
{% endblock %}
