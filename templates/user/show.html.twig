{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="row" style="text-align: center;align-items: center;justify-content: center;margin: 100px 500px 30px;">  
    <h1>Utilisateur : </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Numéro téléphone</th>
                <td>{{ user.numTel }}</td>
            </tr>
            <tr>
                <th>Carte identité</th>
                <td>{{ user.CIN }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image }}</td>
            </tr>
        </tbody>
    </table>
    
    <a class="btn btn-outline-info"href="{{ path('app_user_index') }}">Retour</a>

    <a class="btn btn-outline-success"href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
